{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["ESNext"],
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "isolatedModules": true
    },
    "include": ["src", "types"],
    "exclude": ["**/node_modules", "**/.*/"]
}
